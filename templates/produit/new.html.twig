{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{ asset('assets/css/app.scss') }}">
{% endblock %}
{% block body %}
  <br>
  {{ include('produit/_form.html.twig') }}
  <a href="{{ path('produit_index') }}">Voir tous les produits</a>
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0"><a href="index.html">Accueil</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Vendre</strong></div>
            </div>
        </div>
    </div>  

    <div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h2 class="h3 mb-3 text-black">Veuillez renseigner le formulaire ci dessous pour ajouter un article en vente.</h2>
          </div>
          
          <div class="col-md-7 offset-sm-3">
            <hr>

            <form action="#" method="post">
              
              <div class="p-3 p-lg-5 border">
                <div class="form-group row">
                  <div class="col-sm-8">
                    <label class="text-black">Pour qui ?</label>
                    <select class="form-control">
                        <option>{{ form_widget(form.categorie) }}</option>
                        <option>Femmes </option>
                        <option>Enfants</option>
                        <option>Bébés</option>
                      </select>
                  </div>
                  <div class="col-md-8">
                    <label class="text-black">Quoi? </label>
                    <select class="form-control">
                       
                      </select>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-md-8">
                    <label  class="text-black">Taille </label>
                    <select class="form-control">
                        <option>S</option>
                        <option>XS </option>
                        <option>M</option>
                        <option>L</option>
                        <option>XL</option>
                        <option>XXL</option>
                        <option>XXXL</option>
                        
                      </select>
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-md-8">
                    <label for="c_subject" class="text-black">Etat </label>
                   <select class="form-control">
                     <option>Neuf</option>
                     <option>Très bon état </option>
                     <option>Bon état</option>
                     <option>Etat satisfaisant</option>
                   </select>
                  </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8">
                      <label for="c_email" class="text-black">Ajoutez un titre</label>
                      <input type="email" class="form-control" id="c_email" name="c_email" placeholder="">
                    </div>
                  </div>

                <div class="form-group row">
                  <div class="col-md-8">
                    <label for="c_message" class="text-black">Détails </label>
                    <textarea name="c_message" id="c_message" cols="30" rows="7" class="form-control"></textarea>
                  </div>
                </div>
               

                <div class="form-group row">
                    <div class="col-md-8">
                      <label  class="text-black">Prix </label> </label>
                      <input  class="form-control" >
                    </div>
               </div>
               <div class="form-group row">
                  <div class="col-md-8">
                
                    <label  class="text-black">Ajoutez des photos </label>
                    <input class="form-control-file form-control form-control" type="file" >
                  </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-8">
                      <input type="submit" class="btn btn-primary btn-lg btn-block " value="Mettre en vente">
                    </div>
                  </div>
              </div>
            </form>
          </div>
          
          </div>
        </div>
      </div>
    </div>
            {{ include('produit/_form.html.twig') }}
            <br>
            <a href="{{ path('produit_index') }}">Voir tous les produits</a>
        </div>
    </div>

{% endblock %}
